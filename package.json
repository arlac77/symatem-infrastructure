{
  "name": "symatem-infrastructure",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "description": "infrastructure taxometry with Symatem",
  "scripts": {
    "cover": "npm run build && node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -u exports tests/*_test.js",
    "test": "npm run build && node_modules/.bin/mocha tests/*_test.js && markdown-doctest",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docs": "jsdoc2md -l off -t doc/README.hbs -f src/*.js > README.md",
    "build": "node_modules/rollup/bin/rollup --output=bin/loader -c -- src/loader.js && chmod +x bin/loader"
  },
  "bugs": {
    "url": "https://github.com/arlac77/symatem-infrastructure/issues"
  },
  "homepage": "https://github.com/arlac77/symatem-infrastructure.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/symatem-infrastructure.git"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "dns-zonefile": "^0.1.19",
    "mkdirp": "^0.5.1",
    "plist": "^2.0.1",
    "symatem": "^1.16.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "semantic-release": "^6.3.5",
    "cz-conventional-changelog": "^1.2.0",
    "jsdoc-to-markdown": "^2.0.1",
    "markdown-doctest": "^0.9.1",
    "rollup": "^0.38.2",
    "rollup-plugin-commonjs": "^6.0.1"
  },
  "engines": {
    "node": ">=6.9.2"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Alexander Mei√üner"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "module": "src/loader.js",
  "main": "bin/loader"
}