{
  "name": "symatem-infrastructure",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "description": "infrastructure taxometry with Symatem",
  "bin": {
    "sym-infra-util": "bin/sym-infra-util"
  },
  "scripts": {
    "cover": "nyc --temp-directory build/nyc ava",
    "test": "ava",
    "semantic-release": "semantic-release",
    "docs": "jsdoc2md --configure doc/jsdoc.json -l off -t doc/README.hbs -f src/*.js >README.md",
    "pretest": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "precover": "rollup -c tests/rollup.config.js",
    "prepare": "rollup -c"
  },
  "bugs": {
    "url": "https://github.com/arlac77/symatem-infrastructure/issues"
  },
  "homepage": "https://github.com/arlac77/symatem-infrastructure#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/symatem-infrastructure.git"
  },
  "dependencies": {
    "caporal": "^0.9.0",
    "dns-zonefile": "^0.2.2",
    "make-dir": "^1.0.0",
    "plist": "^2.0.1",
    "symatem": "^1.16.4"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-preset-env": "^1.6.1",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.2",
    "markdown-doctest": "^0.9.1",
    "nyc": "^11.4.0",
    "rollup": "^0.52.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "semantic-release": "^10.0.1",
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=8.9.2"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Alexander Mei√üner"
    }
  ],
  "module": "src/module.js",
  "main": "src/module.js",
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "xo": {
    "space": true
  },
  "ava": {
    "files": [
      "build/*-test.js"
    ],
    "presets": [
      "env"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "build/*-test.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  }
}
