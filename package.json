{
  "name": "symatem-infrastructure",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "description": "infrastructure taxometry with Symatem",
  "bin": {
    "sym-infra-util": "bin/sym-infra-util"
  },
  "scripts": {
    "cover": "nyc ava",
    "test": "ava",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docs": "jsdoc2md -l off -t doc/README.hbs -f src/*.js >README.md",
    "prepublish": "rollup --output=bin/sym-infra-util -c -- src/module.js && chmod +x bin/sym-infra-util",
    "pretest": "rollup -c rollup.config.test.js",
    "posttest": "markdown-doctest",
    "precover": "rollup -c rollup.config.test.js"
  },
  "bugs": {
    "url": "https://github.com/arlac77/symatem-infrastructure/issues"
  },
  "homepage": "https://github.com/arlac77/symatem-infrastructure.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/symatem-infrastructure.git"
  },
  "dependencies": {
    "caporal": "^0.5.0",
    "dns-zonefile": "^0.2.2",
    "mkdirp": "^0.5.1",
    "plist": "^2.0.1",
    "symatem": "^1.16.4"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "jsdoc-to-markdown": "^3.0.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^10.2.0",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "semantic-release": "^6.3.6",
    "ava": "^0.19.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-multi-entry": "^2.0.1"
  },
  "engines": {
    "node": ">=7.9.0"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Alexander Mei√üner"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "module": "src/module.js",
  "main": "src/module.js",
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "ava": {
    "files": [
      "build/test-bundle.js"
    ],
    "require": [
      "babel-register"
    ]
  }
}