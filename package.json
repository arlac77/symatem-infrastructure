{
  "name": "symatem-infrastructure",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "description": "infrastructure taxometry with Symatem",
  "bin": {
    "sym-infra-util": "bin/sym-infra-util"
  },
  "scripts": {
    "cover": "nyc ava",
    "test": "ava",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docs": "jsdoc2md --configure doc/jsdoc.json -l off -t doc/README.hbs -f src/*.js >README.md",
    "pretest": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "precover": "rollup -c tests/rollup.config.js",
    "prepare": "rollup -c -- src/module.js"
  },
  "bugs": {
    "url": "https://github.com/arlac77/symatem-infrastructure/issues"
  },
  "homepage": "https://github.com/arlac77/symatem-infrastructure.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/symatem-infrastructure.git"
  },
  "dependencies": {
    "caporal": "^0.7.0",
    "dns-zonefile": "^0.2.2",
    "make-dir": "^1.0.0",
    "plist": "^2.0.1",
    "symatem": "^1.16.4"
  },
  "devDependencies": {
    "jsdoc-to-markdown": "^3.0.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^11.1.0",
    "rollup": "^0.46.1",
    "rollup-plugin-commonjs": "^8.1.0",
    "semantic-release": "^6.3.6",
    "ava": "^0.21.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-multi-entry": "^2.0.1",
    "jsdoc-babel": "^0.3.0",
    "xo": "^0.19.0",
    "babel-preset-stage-3": "^6.24.1"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Alexander Mei√üner"
    }
  ],
  "module": "src/module.js",
  "main": "src/module.js",
  "nyc": {
    "include": [
      "build/test-bundle.js",
      "src/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "ava": {
    "files": [
      "build/test-bundle.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "space": true
  }
}
