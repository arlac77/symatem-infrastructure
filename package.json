{
  "name": "symatem-infrastructure",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/module.js",
  "module": "src/module.js",
  "description": "infrastructure taxometry with Symatem",
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Alexander MeiÃŸner"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "sym-infra-util": "bin/sym-infra-util"
  },
  "scripts": {
    "cover": "nyc --temp-directory build/nyc ava",
    "test": "ava",
    "semantic-release": "semantic-release",
    "docs": "documentation readme src/module.js --section=API",
    "pretest": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "precover": "rollup -c tests/rollup.config.js",
    "prepare": "rollup -c",
    "lint": "documentation lint src/module.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "SymatemJS": "https://github.com/Symatem/SymatemJS.git",
    "caporal": "^0.10.0",
    "dns-zonefile": "^0.2.2",
    "make-dir": "^1.2.0",
    "plist": "^3.0.0",
    "symatem": "^1.16.4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^13.0.0",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "semantic-release": "^15.8.1",
    "documentation": "^8.0.2",
    "travis-deploy-once": "^5.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-executable": "^1.2.0"
  },
  "engines": {
    "node": ">=8.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/symatem-infrastructure.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/symatem-infrastructure/issues"
  },
  "homepage": "https://github.com/arlac77/symatem-infrastructure#readme",
  "ava": {
    "files": [
      "build/*-test.js"
    ],
    "presets": [
      "env"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "build/*-test.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  },
  "xo": {
    "space": true
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
